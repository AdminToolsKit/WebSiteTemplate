
@{
    ViewBag.Title = "NewsList";
    Layout = "~/Views/MasterView.cshtml";
}

<div class="row">
    <div class="col-md-12">

        <div class="box box-primary">

            <div class="box-header with-border ">
                @*<a class="btn btn-primary" id="import">新增</a>*@
                <h3 class="box-title">
                    <a href="#" onclick="edit('新闻编辑','NewsEdit')" style="color: #000; position: absolute; top: 10px; z-index:999;"><i class="fa fa-plus">&nbsp;</i> 新闻中心</a>
                </h3>

                @RenderPage("~/Views/SearchBar.cshtml")

                @RenderPage("~/Views/BoxWigets.cshtml")
            </div>
            <!-- /.box-header -->
            <div class="box-body" style="overflow-x:scroll;">

                <style>
                    .table td {
                        min-width: 70px;
                    }

                    .table tr[class=bg-aqua] td {
                        text-align: center;
                        font-weight: bold;
                    }

                    .table tr[class=bg-aqua] a {
                        color: #fff;
                        cursor: pointer;
                    }
                </style>

                <table class="table table-striped table-condensed table-bordered" id="Content_Body_GridView1">
                    <tr class="bg-black">
                        <td><a data-index="0">编号</a></td>
                        <td><a data-index="1">优秀党员名字</a></td>
                        <td><a data-index="2">个人简历</a></td>
                        <td><a data-index="3">曾受表彰情况</a></td>
                        <td style="width:200px;">操作</td>
                    </tr>

                        <tr>

                            <td class="td-text">
                                num
                            </td>
                            <td class="td-text">
                                <a href='#'>
                                    item.name
                                </a>
                            </td>

                            <td class="td-text">
                                item.cv
                            </td>

                            <td class="td-text">
                                item.honor
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a class="btn btn-primary" href="#">查看</a>
                                    <a class="btn btn-warning" href="#">编辑</a>
                                    <a class="btn btn-danger" href="#" onclick="delConfirm('1')">删除</a>
                                </div>
                            </td>
                        </tr>
                </table>

            </div>
            <!-- /.box-body -->
        </div>

        @RenderPage("~/Views/Paging.cshtml")

    </div>

</div>

