@using LYWeb.Models
@model LoginViewModel
@{
    Layout = null;
    ViewBag.Title = "登录";
}
<!DOCTYPE html>
<html lang="zh">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>登录--管理信息系统</title>
    <link rel="stylesheet" type="text/css" href="~/Content/login.css" />
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <style>
        .code {
            width: 200px;
            float: left;
        }
    </style>
</head>
<body>
    <div class="htmleaf-container">


        <form name="Form1" method="post" action="./Login.aspx" id="Form1">
            <div class="login">
                <header style="text-align:center;">登录--管理信息系统</header>
                <div class="photo"></div>
                <span>欢迎使用</span>
                <div class="form-group">
                    <input name="txtID" type="text" maxlength="12" id="txtID" class="form-control account" required="" />
                    <span class="form-highlight"></span>
                    <span class="form-bar"></span>
                    <label for="txtID" class="float-label">帐号</label>
                </div>
                <div class="form-group">
                    <input name="txtPwd" type="password" id="txtPwd" class="form-control password" required="" />
                    <span class="form-highlight"></span>
                    <span class="form-bar"></span>
                    <label for="txtPwd" class="float-label">密码</label>
                </div>
                <div class="form-group">
                    <input name="txtCode" type="text" maxlength="10" size="7" id="txtCode" class="form-control code" required="" style="width:120px;" />
                    <span><img id="image1" src="images/check.jpg?6435" border="0" style="height:23px;width:45px;vertical-align: bottom" /></span>

                    <span class="form-highlight"></span>
                    <span class="form-bar"></span>
                    <label for="txtCode" class="float-label">验证码</label>
                </div>
                <div class="form-group">
                    <input type="submit" name="btnSubmit" value="登录" id="btnSubmit" />
                </div>
                <div class="form-group" style="display:none">

                    <span class="att3"><input id="go_1" type="radio" name="goto" value="go_1" checked="checked" /><label for="go_1">XXX</label></span>
                    <span class="att3"><input id="go_2" type="radio" name="goto" value="go_2" /><label for="go_2">XXX</label></span>
                    <input type="submit" name="btnReset" value="重置" id="btnReset" tabindex="4" style="background-color:#C0FFFF;width:55px;" />
                </div>

            </div>
        </form>
    </div>

</body>
</html>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}